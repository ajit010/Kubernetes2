apiVersion: v1
kind: Pod
metadata:
  name: pod-with-config
spec:
  containers:
  - name: config-test
    image: busybox
    command: ["sh", "-c", "echo APP_ENV=$APP_ENV && echo APP_VERSION=$APP_VERSION && sleep 3600"]
    env:
    - name: APP_ENV
      valueFrom:
        configMapKeyRef:
          name: app-config
          key: APP_ENV
    - name: APP_VERSION
      valueFrom:
        configMapKeyRef:
          name: app-config
          key: APP_VERSION
